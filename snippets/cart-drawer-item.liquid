{% liquid
  assign aspect_ratio = item.image.aspect_ratio | default: 0.75
  assign collections = ''
  for collection in item.product.collections
    assign collections = collections | append: collection.id | append: ','
  endfor
%}
<div
  id="MinimogCartDrawer-Item-{{ item.index | plus: 1 }}"
  class="m-cart-drawer--item m-cart--item scd-item"
  data-cart-item
  data-id="{{- item.key -}}"
  data-product-id="{{- item.product_id -}}"
  data-index="{{- forloop.index -}}"
  data-foxkit-collections="{{ collections }}"
>
  <div class="m-cart-drawer--item-inner scd-item__inner flex items-start">
    <div class="m-cart-drawer--item-media scd-item__image">
      <a href="{{- item.url -}}" class="block as" style="--aspect-ratio: {{ aspect_ratio }}">
        {% if item.image != blank %}
          {{ item | image_url: width: 360 | image_tag: width: 360 }}
        {% else %}
          {{- 'image' | placeholder_svg_tag: 'sf__placeholder-svg w-full h-full' -}}
        {% endif %}
      </a>
    </div>
    <div class="scd-item__info">
      <a href="{{- item.url -}}" class="m-cart--item-name font-medium hover:underline">
        {{- item.product.title -}}
      </a>
      {%- unless item.product.has_only_default_variant -%}
        <div class="scd-item__variant mb-1">
          {%- for option in item.options_with_values -%}
            <p class="scd-item__variant-option"><span class="font-medium">{{- option.name -}}: </span> {{- option.value -}}</p>
          {%- endfor -%}

          {% comment %}Properties{% endcomment %}
          {%- liquid
            assign property_size = item.properties | size
            assign properties = 'template ' | split: ' '
            if property_size > 0
              assign properties = item.properties
            endif
          -%}
          {%- for p in properties -%}
            {%- assign property_first_char = p.first | slice: 0 -%}
            <p
              class="scd-item__variant-option {% if property_size == 0 or p.last == blank or property_first_char == '_' %}hidden{% endif %}"
              data-cart-item-property
            >
              <span class="sf-cart__item-label font-medium" data-cart-item-property-name>{{ p.first }}: </span>

              {%- comment -%}
                Check if there was an uploaded file associated
              {%- endcomment -%}
              <span data-cart-item-property-value>
                {%- if p.last contains '/uploads/' -%}
                  <a href="{{ p.last }}" data-role="product-upload" class="underline" target="_blank">{{ p.last | split: '/' | last }}</a>
                {%- else -%}
                  {{ p.last }}
                {%- endif -%}
              </span>
            </p>
          {%- endfor -%}
        </div>
      {%- endunless -%}
  
      <div class="scd-item__prices">
        {%- if item.original_price != item.final_price -%}
          <div class="cart-drawer__discounted-prices">
            <del class="scd-item__original-price text-color-sale-price">
              {% if settings.currency_code_enabled %}
                {{- item.original_price | money_with_currency -}}
              {% else %}
                {{- item.original_price | money -}}
              {% endif %}
            </del>
            <span class="scd-item__price scd-item__price--discount sf-currency text-color-regular-price">
              {% if settings.currency_code_enabled %}
                {{- item.final_price | money_with_currency -}}
              {% else %}
                {{- item.final_price | money -}}
              {% endif %}
            </span>
          </div>
        {%- else -%}
          <span class="scd-item__original-price scd-item__price sf-currency text-color-regular-price">
            {% if settings.currency_code_enabled %}
              {{- item.original_price | money_with_currency -}}
            {% else %}
            {{- item.original_price | money -}}
            {% endif %}
          </span>
        {%- endif -%}

        <div {% unless item.unit_price_measurement %}class="hidden"{% endunless %}>
          <span class="visually-hidden visually-hidden--inline">{{ 'products.product.unit_price_label' | t }}</span>
          <span class="price-unit-price text-sm text-color-secondary">
          {%- capture unit_price_separator -%}
            <span aria-hidden="true">/</span>
            <span class="visually-hidden">{{ 'general.accessibility.unit_price_separator' | t }}&nbsp;</span>
          {%- endcapture -%}

            {%- capture unit_price_base_unit -%}
              {%- if item.unit_price_measurement.reference_value != 1 -%}
                {{- item.unit_price_measurement.reference_value -}}
              {%- endif -%}
              {{ item.unit_price_measurement.reference_unit }}
            {%- endcapture -%}

          <span data-unit-price>{{ item.unit_price | money }}</span>
          {{- unit_price_separator -}}
          <span data-unit-price-base-unit>{{- unit_price_base_unit -}}</span>
        </span>
        </div>
      </div>

      {%- if item.discounts.size > 0 -%}
        <ul class="scd-item__discounts flex" role="list">
          {%- for discount in item.discounts -%}
            <li>
              <svg aria-hidden="true" width="20" height="20" focusable="false" role="presentation" viewBox="0 0 12 13"><path fill-rule="evenodd" clip-rule="evenodd" d="M7 .5h3a2 2 0 0 1 2 2v3a.995.995 0 0 1-.293.707l-6 6a1 1 0 0 1-1.414 0l-4-4a1 1 0 0 1 0-1.414l6-6A.995.995 0 0 1 7 .5zm2 2a1 1 0 1 0 2 0 1 1 0 0 0-2 0z" fill="currentColor"></path></svg>
              {{- discount.title -}}
            </li>
          {%- endfor -%}
        </ul>
      {%- endif -%}
      <div class="flex items-center mt-[10px]">
        <div class="m-cart-quantity--wrapper scd-item__quantity flex justify-between rounded">
          {%- if gift_wrap_id == nil or item.id != gift_wrap_id -%}
            <m-quantity-input>
              <button class="m-cart-quantity--button scd-item__btn" name="minus" type="button">-</button>
              <input
                class="m-cart-quantity--input py-1 scd-item__qty_input w-9 text-center"
                type="number"
                data-quantity-variant-id="{{ item.variant.id }}"
                name="updates[]"
                value="{{ item.quantity }}"
                {% # theme-check-disable %}
                data-cart-quantity="{{ cart | item_count_for_variant: item.variant.id }}"
                min="{{ item.variant.quantity_rule.min }}"
                {% if item.variant.quantity_rule.max != null %}
                  max="{{ item.variant.quantity_rule.max }}"
                {% endif %}
                step="{{ item.variant.quantity_rule.increment }}"
                {% # theme-check-enable %}
                id="MinimogDrawer-quantity-{{ item.index | plus: 1 }}"
                data-index="{{ item.index | plus: 1 }}"
              />
              <button class="m-cart-quantity--button scd-item__btn" name="plus" type="button">+</button>
            </m-quantity-input>
          {%- else -%}
            <m-gift-wrapping-input
              class="sf-quantity flex justify-between w-full" data-product-id="{{ product_id | default: item.product.id }}"
              cart-items-size="{{ cart.items.size }}"
              gift-wraps-in-cart="{{ gift_wraps_in_cart }}"
              items-in-cart="{{ items_in_cart }}"
              data-index="{{ item.index | plus: 1 }}"
            >
              <button class="m-cart-quantity--button scd-item__btn" name="minus" type="button">-</button>
              <input class="py-2 scd-item__qty_input w-9 text-center"
                class="m-cart-quantity--input py-1 scd-item__qty_input w-9 text-center"
                type="number"
                data-quantity-variant-id="{{ item.variant.id }}"
                name="updates[]"
                value="{{ item.quantity }}"
                {% # theme-check-disable %}
                data-cart-quantity="{{ cart | item_count_for_variant: item.variant.id }}"
                min="{{ item.variant.quantity_rule.min }}"
                {% if item.variant.quantity_rule.max != null %}
                  max="{{ item.variant.quantity_rule.max }}"
                {% endif %}
                step="{{ item.variant.quantity_rule.increment }}"
                {% # theme-check-enable %}
                id="MinimogDrawer-quantity-{{ item.index | plus: 1 }}"
                data-index="{{ item.index | plus: 1 }}"
                disabled="disabled"
              >
              <button class="m-cart-quantity--button scd-item__btn" name="plus" type="button">+</button>
            </m-gift-wrapping-input>
          {%- endif -%}
        </div>
        <m-cart-remove-button
          id="MinimogCartDrawer-Remove-{{ item.index | plus: 1 }}"
          data-index="{{ item.index | plus: 1 }}"
        >
          <span class="scd-item__remove underline p-2 ml-2 cursor-pointer{% unless gift_wrap_id == nil or item.id != gift_wrap_id %} hidden{% endunless %}">
            {{- 'cart.general.remove' | t -}}
          </span>
        </m-cart-remove-button>
      </div>
    </div>
  </div>
</div>


<!-- test -->
<div class="cart__item{% if giftWrapProduct %} gift-wrap-product{% endif %}" data-key="{{ product.key }}">
  <div class="cart__image">
    {% if product.image != blank %}
      <a {% unless giftWrapProduct %}href="{{ product.url }}"{% else %} role="link" aria="disabled"{% endunless %} class="image-wrap">
        {%- render 'image-element',
          img: product,
          alt: product.product.title,
          widths: '180, 360, 540',
          sizes: sizes,
          sizeVariable: sizeVariable,
          fallback: fallback
        -%}
      </a>
    {% endif %}
  </div>
  <div class="cart__item-details">
    <div class="cart__item-title">
      <a {% unless giftWrapProduct %}href="{{ product.url }}"{% else %} role="link" aria="disabled"{% endunless %} class="cart__item-name">
        {{ product.product.title }}
      </a>
      {%- unless product.product.has_only_default_variant -%}
        <div class="cart__item--variants">
          {%- for option in product.options_with_values -%}
            <div>
              <span>{{ option.name }}:</span> {{ option.value }}
            </div>
          {%- endfor -%}
          {% unless giftWrapProduct %}
          <cart-item-options
            class="js-modal-open-quick-modal-{{ product.product.id }}-{{ product.key }}{% if mainCart %} cartPageItem{% endif %}"
            data-quantity="{{ product.quantity }}"
            data-key="{{ product.key }}"
            data-current-variant="{{ product.variant.id }}"
            data-new-variant="{{ product.product.selected_or_first_available_variant.id }}"
          >
            <span data-cart-popup-open>Change options</span>
            <template>
              {%- render 'cart-options-popup', product: product.product, cartItem: product -%}
            </template>
          </cart-item-options>
          {% endunless %}
        </div>
      {%- endunless -%}
      {%- if product.selling_plan_allocation != blank -%}
        <div class="cart__item--variants">
          {{ product.selling_plan_allocation.selling_plan.name }}
        </div>
      {%- endif -%}
      {%- assign property_size = product.properties | size -%}
      {% if property_size > 0 %}
        {% for p in product.properties %}
          {%- assign first_character_in_key = p.first | truncate: 1, '' -%}
          {% unless p.last == blank or first_character_in_key == '_' %}
            <div class="cart__item--properties">
              <span>{{ p.first }}:</span>
              {% if p.last contains '/uploads/' %}
                <a href="{{ p.last }}">{{ p.last | split: '/' | last }}</a>
              {% else %}
                {{ p.last }}
              {% endif %}
            </div>
          {% endunless %}
        {% endfor %}
      {% endif %}
    </div>

    <!-- MinMax qty -->
    {% assign min_qty = 0 %}
    {% assign max_qty = 10000000 %}
    {% for tag in product.product.tags %}
      {% if tag contains 'min__' %}
        {%- liquid
          assign tag_content = tag | split: '__' | last
        -%}
        {% assign min_qty = tag_content | times: 1 %}
        {% assign disableBTN = true %}

      {% elsif tag contains 'max__' %}
        {%- liquid
          assign Mtag_content = tag | split: '__' | last
        -%}
        {% assign max_qty = Mtag_content | times: 1 %}
        {% assign disableBTN = true %}
      {% endif %}
    {% endfor %}

    <!-- MinMax qty -->
    <div class="cart__item-sub">
          {% unless giftWrapProduct %}
      <div>
        <div class="js-qty__wrapper">
          <label for="cart_updates_{{ product.key }}" class="hidden-label">{{ 'cart.label.quantity' | t }}</label>
          <input
            type="text"
            id="cart_updates_{{ product.key }}"
            name="updates[]"
            class="js-qty__num"
            value="{{ product.quantity }}"
            min="{{ min_qty }}"
            {% if disableBTN %}
              readonly
            {% endif %}
            pattern="[0-9]*"
            data-id="{{ product.key }}"
            max="{{ max_qty }}"
          >

          <button
            type="button"
            class="js-qty__adjust js-qty__adjust--minus"
            aria-label="{{ 'cart.general.reduce_quantity' | t }}"
            {% if item.quantity <= min_qty %}
              disabled
            {% endif %}
          >
            <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-minus" viewBox="0 0 20 20">
              <path fill="#444" d="M17.543 11.029H2.1A1.032 1.032 0 0 1 1.071 10c0-.566.463-1.029 1.029-1.029h15.443c.566 0 1.029.463 1.029 1.029 0 .566-.463 1.029-1.029 1.029z"/>
            </svg>
            <span class="icon__fallback-text" aria-hidden="true">&minus;</span>
          </button>
          <button
            type="button"
            class="js-qty__adjust js-qty__adjust--plus"
            aria-label="{{ 'cart.general.increase_quantity' | t }}"
            {% if item.quantity >= max_qty %}
              disabled
            {% endif %}
          >
            <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-plus" viewBox="0 0 20 20">
              <path fill="#444" d="M17.409 8.929h-6.695V2.258c0-.566-.506-1.029-1.071-1.029s-1.071.463-1.071 1.029v6.671H1.967C1.401 8.929.938 9.435.938 10s.463 1.071 1.029 1.071h6.605V17.7c0 .566.506 1.029 1.071 1.029s1.071-.463 1.071-1.029v-6.629h6.695c.566 0 1.029-.506 1.029-1.071s-.463-1.071-1.029-1.071z"/>
            </svg>
            <span class="icon__fallback-text" aria-hidden="true">+</span>
          </button>
        </div>

        <div class="cart__remove">
          <a href="{{ routes.cart_change_url }}?id={{ product.key }}&amp;quantity=0" class="text-link">
            {{ 'cart.general.remove' | t }}
          </a>
        </div>
      </div>
      {% endunless %}
      <div class="cart__item-price-col text-right">
        {% if product.original_price != product.final_price %}
          <span class="visually-hidden">{{ 'products.general.regular_price' | t }}</span>
          <small class="cart__price cart__price--strikethrough">
            {{ product.original_price | money }}
          </small>
          <span class="visually-hidden">{{ 'products.general.sale_price' | t }}</span>
          <span class="cart__price cart__discount">
            {{ product.final_price | money }}
          </span>
        {% else %}
          <span class="cart__price">
            {{ product.original_price | money }}
          </span>
        {% endif %}

        {%- if product.line_level_discount_allocations != blank -%}
          {%- for discount_allocation in product.line_level_discount_allocations -%}
            <small class="cart__discount">
              {{- discount_allocation.discount_application.title }} (-{{ discount_allocation.amount | money }})</small
            >
          {%- endfor -%}
        {%- endif -%}

        {%- if product.unit_price_measurement -%}
          {%- capture unit_price_base_unit -%}
            <span class="unit-price-base">
              {%- if product.unit_price_measurement -%}
                {%- if product.unit_price_measurement.reference_value != 1 -%}
                  {{ product.unit_price_measurement.reference_value }}
                {%- endif -%}
                {{ product.unit_price_measurement.reference_unit }}
              {%- endif -%}
            </span>
          {%- endcapture -%}

          <div class="product__unit-price">{{ product.unit_price | money }}/{{ unit_price_base_unit }}</div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>
